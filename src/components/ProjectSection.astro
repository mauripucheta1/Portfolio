<style>

    /*Animación subrayado*/
    .underline-animated {
        position: relative;
        display: inline-block;
        flex-wrap: wrap;
        text-decoration: none;
        align-self: center;
    }

    .underline-animated::after {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        height: 2px;
        background-color: #3B88C3;
        width: 100%;
        max-width: 100%;
        transform: scaleX(0);
        transition: transform 0.3s ease;
        transform-origin: bottom left;
        pointer-events: none;
    }

    .underline-animated:hover::after {
        transform: scaleX(1);
    }

    /*Efecto desvanecimiento*/
    .efectoDesvanecimiento {
        transition: opacity 0.5s ease;
    }

    /*Ocultar la imagen del contenedor*/
    .contenedorTarjeta:hover img {
        opacity: 0;
        z-index: -10;
    }

    /*Ocultar texto del contenedor*/
    .contenedorTarjeta:hover p {
        visibility: hidden;
    }

    /*Ocultar el <a> al principio*/
    .contenedorTarjeta a {
        opacity: 0;
        visibility: hidden;
    }

    /*Ocultar el <h2> al principio*/
    .contenedorTarjeta h2 {
        opacity: 0;
        visibility: hidden;
    }

    /*Ocultar el <svg> al principio*/
        .contenedorTarjeta svg {
        opacity: 0;
        visibility: hidden;
    }

    /*Mostrar el a con el hover*/
    .contenedorTarjeta:hover a {
        opacity: 1;
        visibility: visible;
    }

    /*Mostrar el h2 con el hover*/
    .contenedorTarjeta:hover h2 {
        opacity: 1;
        visibility: visible;
    }

    /*Mostrar el svg con el hover*/
    .contenedorTarjeta:hover svg {
        opacity: 1;
        visibility: visible;
    }
   
    /*Background contenedor tarjeta*/
    .contenedorTarjeta:hover {
        transition: 0.5s ease-in-out;
        background-color: #3B88C3; /* Color de fondo en el hover */
    }

    /* Tema Oscuro */
    .dark-theme {
        background-color: #121212;
        color: #E0E0E0;
        transition: background-color 0.5s ease, color 0.5s ease;
    }

    /*Bordes para tema oscuro*/ 
    .borderDark {
        border: 1px solid #E0E0E0;
    }

</style>
