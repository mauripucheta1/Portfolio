<style>

    /*Creación de la animación de rotación*/
    @keyframes spin-border {
        0% {
            transform: rotate(0deg);
        }
        100% {
            transform: rotate(360deg);
        }
    }

    /*Estilo base para el borde rotatorio*/
    .spin-container {
        position: absolute;
        inset: 0; /* Asegura que el borde ocupe todo el contenedor */
        border: 4px solid transparent; /* Todos los bordes transparentes por defecto */
        border-top: 4px solid #3B88C3; /* Solo el borde superior visible */
        border-radius: 50%; /* Hace que el borde sea redondo */
        animation: none; /* Sin animación por defecto */
        transition: border-color 0.5s ease-in-out; /* Transición suave para completar el borde */
    }

    /*Activación de la animación*/
    .spin-container.spin {
        animation: spin-border 1s linear forwards; /* Gira una vez (360°) */
    }

    /*Completa el borde después del giro*/
    .spin-container.complete {
        border-color: #3B88C3; /* Cambia todos los bordes a azul completo */
    }

    /*Animación de balanceo*/
    @keyframes swing {
        0% {
            transform: rotate(0deg); /* Posición recta inicial */
        }
        25% {
            transform: rotate(-10deg); /* Se inclina hacia la izquierda */
        }
        50% {
            transform: rotate(10deg); /* Se inclina hacia la derecha */
        }
        75% {
            transform: rotate(-5deg); /* Regresa ligeramente hacia la izquierda */
        }
        100% {
            transform: rotate(0deg); /* Vuelve a la posición recta */
        }
    }

    /*Estado inicial*/
    .animated-svg {
        display: block;
        margin: 20px auto;
        transform: rotate(0deg); /* Recto inicialmente */
        opacity: 0; /* Invisible */
        transition: opacity 1s ease; /* Transición suave para la opacidad */
    }

    /*Animación cuando es visible*/
    .animated-svg.visible {
        animation: swing 1.5s ease-in-out; /* Balanceo suave */
        opacity: 1; /* Se hace visible */
    }

    /* Sidebar fuera del viewport */
    .side-content {
        visibility: hidden;
        opacity: 0;
        transform: translateX(-100%); /* Oculto inicialmente */
        transition: transform 0.7s ease, opacity 0.7s ease, visibility 0s ease; /* Solo transición en transform */
        left: 0px; /* Alineado con el trigger */
    }

    /* Sidebar visible */
    .side-content.open {
        visibility: visible;
        opacity: 1;
        transform: translateX(0); /* Desplazado al viewport */
        transition: transform 0.7s ease, opacity 0.7s ease;
    }

    /* Trigger en su posición inicial */
    .menu-trigger {
        transition: left 0.7s ease; /* Suavidad solo en el movimiento horizontal */
        left: 0; /* Posición inicial */
    }

    /* Trigger desplazado hacia la derecha */
    .menu-trigger.move {
        left: 40px; /* Alineado con el ancho del sidebar */
    }

    /*Sombra en tema claro*/
    .light-theme .sombraTarjeta {
        box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.5); /* Sombra negra más pronunciada */
    }

    /*Sombra en tema oscuro*/
    .dark-theme .sombraTarjeta {
        box-shadow: 0px 5px 15px rgba(212, 212, 212, 0.171); /* Sombra blanca más ligera */
    }

    /* Tema Oscuro */
